@{
    Layout = "_Layout";
}
@model UniversityRegistrar.Models.Student
<main class="create-form pt-5">
    <div class="container text-center">
        <h1>Add New Student</h1>
        @using (Html.BeginForm())
        {
            <div class="form-group mt-3">
                @Html.Label("Student's Name" , null , new{@class = "form-label h4"})
                @Html.TextBoxFor(student => student.Name , new {@class = "form-control text-center"})
            </div>
            <div class="form-group mt-3">
                @Html.Label("Department" , null , new{@class = "form-label h4"})
                @Html.DropDownList("DepartmentId" , null , new{@class = "form-control text-center"})
            </div>
            <div class="form-group mt-3">
                @Html.Label("Date Of Enrollment" , null , new{@class = "form-label h4"})
                @Html.TextBoxFor(student => student.DateOfEnroll , new {type = "datetime-local" , @class = "form-control text-center"})
            </div>
            <input type="submit" class="btn btn-dark mt-4 btn-lg" value="Submit">
        }
    </div>
</main>