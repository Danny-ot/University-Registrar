@{
    Layout = "_Layout";
}
@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Student>;

<main class="container">
    <h1 class="text-center mt-4">Students Register</h1>
    <div class="table-responsive mt-5 text-center">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">Department</th>
            </tr>
          </thead>
          @if(Model.Count != 0)
          {
            <tbody>              
                @foreach(Student student in Model)
                {
                    <tr>
                        <td>@student.StudentId</td>
                        <td>@student.Name</td>
                        <td>@student.Department.Name</td>
                        <td>@Html.ActionLink("Details" , "Details" , null , new { id = @student.StudentId} , new{ @class = "btn btn-outline-dark"})</td>
                    </tr>
                }
            </tbody>
          }
        </table>
      </div>
      <p class="text-center mt-5">@Html.ActionLink("Add new Student" , "Create" , null , null , new{@class = "btn btn-dark"})</p>
</main>