@{
    Layout = "_Layout";
}
@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Course>;
    
<main class="container text-center py-4" id="course_main">
    <h1>Courses</h1>
    <div class="table-responsive mt-5 text-center">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Course No</th>
              <th scope="col">Name</th>
              <th scope="col"></th>
            </tr>
          </thead>
          @if(Model.Count != 0)
          {
            <tbody>              
                @foreach(Course course in Model)
                {
                    <tr>
                        <td>@course.CourseNo</td>
                        <td>@course.Name</td>
                        <td>@Html.ActionLink("Details" , "Details" , null , new {id = @course.CourseId} , new{ @class = "btn btn-outline-dark"})</td>
                    </tr>
                }
            </tbody>
          }
        </table>
      </div>
      <p class="text-center mt-5">@Html.ActionLink("Add new course" , "Create" , null , null , new{@class = "btn btn-dark"})</p>
</main>