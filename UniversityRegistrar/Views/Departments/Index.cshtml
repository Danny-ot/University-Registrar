@{
    Layout = "_Layout";
}
@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Department>;

<main id="departments-main " class="container text-center">
    <h1>Departments</h1>
    <div class="table-responsive mt-5 text-center">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Department Name</th>
              <th scope="col"></th>
            </tr>
          </thead>
          @if(Model.Count != 0)
          {
            <tbody>              
                @foreach(Department department in Model)
                {
                    <tr>
                        <td>@department.DepartmentId</td>
                        <td>@department.Name</td>
                        <td>@Html.ActionLink("Details" , "Details" , null , new {id = @department.DepartmentId} , new{ @class = "btn btn-outline-dark"})</td>
                    </tr>
                }
            </tbody>
          }
        </table>
      </div>
      <p class="text-center mt-5">@Html.ActionLink("Add new department" , "Create" , null , null , new{@class = "btn btn-dark"})</p>
</main>